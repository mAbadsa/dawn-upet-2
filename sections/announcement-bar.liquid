{%- style -%}

  .announcement-bar {
    padding-inline: 7.3rem;
  }

  .announcement-bar .icon-phone {
    width: 13.38px;
    height: 13.43px;
  }

  .announcement-bar__phone-section span.phone-number {
    font-family: fangsong;
    letter-spacing: 0.55px;
  }

  .announcement-bar__phone-section span.phone-number .header__heading-link {
    color: rgb(var(--color-base-accent-1));
    text-decoration: none;
  }

  .announcement-bar .icon__box {
    display: flex;
    align-items: center;
    padding-inline: 11px;
  }

  @media screen and (min-width: 1280px) {
    .announcement-bar {
     padding-inline: 7.3rem;
    }

    .announcement-bar__flag-section {
      margin-right: 0px;
    }

    .announcement-bar .icon__box {
    padding-inline: 11px;
}
  }

  @media screen and (min-width: 992px) and (max-width: 1279px) {
    .announcement-bar {
     padding-inline: 7.2rem;
  }

    .hero-header__signin {
      margin-right: 8px
    }

    .hero-header-container {
      padding-top: 20px
    }

    .announcement-bar__flag-section {
      margin-right: -16px;
    }

    .announcement-bar .icon__box {
      margin-left: -16px;
    }
  }

  @media screen and (min-width: 768px) and (max-width: 992px) {
    .announcement-bar {
      padding-inline: 8.8rem
    }
    .announcement-bar .icon__box {
      padding-inline: 12px;
    }
/* 
    .announcement-bar__flag-section {
      margin-right: -14px;
    } */
  }

  /* @media screen and (min-width: 992px) {
    .announcement-bar {
      padding-inline: 5.5rem;
    }

    
  } */

  @media screen and (max-width: 767px) {
    .announcement-bar {
      padding-inline: 2.5rem;
    }
  }

  @media screen and (max-width: 427px) {
    .announcement-bar {
      padding-inline: 1.5rem;
    }
  }
{%- endstyle -%}

<div
  class="announcement-bar"
  role="region"
  aria-label="{{ 'sections.header.announcement' | t }}"
  {{
  block.shopify_attributes
  }}
  style="background-color: {{ section.settings.background_color }};"
>
  <div class="content-width announcement-bar__layout">
    <div class="announcement-bar__phone-section">
      <span class="announcement-bar__phone-section-question">{{ section.settings.left_text }}</span>
      <span class="icon__box">
        {% render 'icon-phone' %}
      </span>
      <span class="phone-number"><a class="header__heading-link" href="tel:{{ section.settings.phone }}">{{ section.settings.phone }}</a>
      </span>
    </div>
    <div class="announcement-bar__flag-section">
      <span class="icon__box">{% render 'icon-flag' %}</span>
      <span>EN</span>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "default": "#F0F0F0",
      "label": "Background Color"
    },
    {
      "type": "text",
      "id": "left_text",
      "default": "Questions?",
      "label": "Left Text"
    },
    {
      "type": "text",
      "id": "phone",
      "default": "(929) 566-7788",
      "label": "Phone Number"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "background-1",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__1.label"
            },
            {
              "value": "background-2",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__2.label"
            },
            {
              "value": "inverse",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__3.label"
            },
            {
              "value": "accent-1",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__4.label"
            },
            {
              "value": "accent-2",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__5.label"
            }
          ],
          "default": "accent-1",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
